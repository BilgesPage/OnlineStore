@*@model IEnumerable<Product>*@

@model ProductListViewModel

    @foreach (var item in Model.Products)
    {
        <div>
            <h1>@item.Name</h1>
            @item.Description
            <h3> @String.Format($"{item.Price:C2}")</h3>
        </div>
    }



<div page-model="@Model.PagingInfo" page-action="List"></div>